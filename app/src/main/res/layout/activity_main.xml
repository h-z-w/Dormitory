<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:orientation="vertical">

    <!--存放framgment布局-->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/btn_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5FFFA">
            <RadioButton
                android:checked="true"
                android:id="@+id/btn_zhuye"
                android:text="主页"
                android:drawableTop="@drawable/tab_mune_zhuye"
                style="@style/tab_menu_item" />

            <RadioButton
                android:id="@+id/btn_information"
                style="@style/tab_menu_item"
                android:checked="false"
                android:drawableTop="@drawable/tab_mune_information"
                android:text="宿舍信息" />


            <RadioButton
                android:checked="false"
                android:id="@+id/btn_ping"
                android:text="卫生评比"
                android:drawableTop="@drawable/tab_mune_ping"
                style="@style/tab_menu_item"
                />
        </RadioGroup>



    </LinearLayout>


</LinearLayout>





